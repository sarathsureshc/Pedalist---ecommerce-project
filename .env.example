# Database Configuration
MONGODB_URI=mongodb://localhost:27017/pedalist

# Session Secret (Generate a strong random string for production)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Razorpay Payment Gateway
RAZORPAY_ID_KEY=your-razorpay-key-id
RAZORPAY_SECRET_KEY=your-razorpay-secret-key

# Email Configuration (Gmail SMTP)
NODEMAILER_EMAIL=your-email@gmail.com
NODEMAILER_PASSWORD=your-app-password

# Server Configuration
PORT=3000
NODE_ENV=development

# Render Deployment (Production only)
# RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
# ALLOWED_ORIGINS=https://your-app-name.onrender.com,https://www.yourdomain.com

# Optional: Redis Configuration (for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Optional: Allowed Origins for CORS (comma-separated)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Optional: Logging Level (error, warn, info, debug)
# LOG_LEVEL=info
