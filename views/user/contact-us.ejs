<%- include('../partials/user/header.ejs') %>
<link rel="stylesheet" href="contact.css">
<main class="contact-container">
    <section class="hero">
        <div class="hero-text">
            <h1>Contact Us</h1>
            <p>We'd love to hear from you! Reach out for any inquiries, feedback, or assistance.</p>
        </div>
    </section>

    <section class="form-section">
        <form action="/submit-contact" method="POST" class="contact-form">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" placeholder="Enter your name" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message" name="message" rows="5" placeholder="Write your message" required></textarea>
            </div>
            <button type="submit" class="btn">Send Message</button>
        </form>
    </section>

    <section class="info-section">
        <h2>Get in Touch</h2>
        <p><strong>Email:</strong> support@pedalist.com</p>
        <p><strong>Phone:</strong> +123-456-7890</p>
        <p><strong>Address:</strong> 123 Pedalist Lane, Cycle City, CC 45678</p>
    </section>
</main>

<%- include('../partials/user/footer.ejs') %>