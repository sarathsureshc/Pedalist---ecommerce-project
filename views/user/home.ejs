<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pedalist</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">


  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Racing Sans One Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Racing+Sans+One&display=swap" rel="stylesheet">

  <!-- Bullseye bullet -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


  <!-- Custom CSS -->
  <link rel="stylesheet" href="styles.css">
</head>

<body>

  <!-- Navbar (transparent and positioned over the image) -->
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="pedalist-logo.png" alt="Logo" width="60" height="50">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mx-auto"> 
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/products">Products</a></li>
          <li class="nav-item"><a class="nav-link" href="#">About Us</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
          <li class="nav-item">
      
            <% if(locals.user){ %>
              <div class="dropdown">
                <a href="#" class="nav-link">
                  <%= locals.user.firstName %>
                </a>
                <div class="dropdown-content">
                  <a href="/profile">Profile</a>
                  <a href="/logout">Logout</a>
                </div>
              </div>
              <% } else { %>
                <a class="nav-link" href="/login">Login</a>
                <% } %>
                
          </li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <% if(locals.user){ %>
          <li class="nav-item">
            <a href="/cart" class="nav-link cart-link">
              <i class="bi bi-cart-fill"></i>
              <span class="cart-badge"><%= cartCount %></span>
            </a>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>


  <!-- Background image section -->
  <div class="background-image">
    <div class="color-overlay"></div>

    <div class="container text-white overlay-text">
      <h5 class="subheading">Newly Launched</h5>
      <h1 class="main-heading">Marlin GRS100</h1>
      <h6 class="small-heading mt-4">Specifications</h6>
      <ul class="specifications-list">
        <li><i class="fas fa-bullseye"></i> Frame: Carbon Fiber</li>
        <li><i class="fas fa-bullseye"></i> Gears: Shimano 21-Speed</li>
        <li><i class="fas fa-bullseye"></i> Brakes: Hydraulic Disc Brakes</li>
        <li><i class="fas fa-bullseye"></i> Suspension: Front Suspension Fork</li>
      </ul>
      <a href="#" class="btn buy-now-btn">BUY NOW</a>
    </div>

  </div>

  <!-- New Arrivals Section -->
<section class="new-arrivals">
  <div class="container">
      <h2 class="text-center my-4">New Arrivals</h2>
      <div class="row d-none d-lg-flex"> <!-- For larger screens -->
          <!-- Dynamic Content -->
          <% newArrivals.forEach((product) => { %>
              <div class="col-md-3 mb-4">
                <a href="/product-detail?id=<%= product._id %>">
                  <div class="card">
                      <img src="./uploads/product-images/<%= product.image[0] %>" class="card-img-top" alt="<%= product.productName %>">
                      <div class="card-body">
                          <h5 class="card-title"><%= product.productName %></h5>
                          <p class="card-text">&#8377;<%= product.price %></p>
                      </div>
                  </div>
                </a>
              </div>
          <% }); %>
      </div>

      <!-- Carousel for small screens -->
      <div id="newArrivalsCarousel" class="carousel slide d-lg-none" data-bs-ride="carousel">
          <div class="carousel-inner">
              <!-- Dynamic Carousel Items -->
              <% newArrivals.forEach((product, index) => { %>
                  <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                      <div class="card">
                          <img src="./uploads/product-images/<%= product.image[0] %>" class="card-img-top" alt="<%= product.productName %>">
                          <div class="card-body">
                              <h5 class="card-title"><%= product.productName %></h5>
                              <p class="card-text">&#8377;<%= product.price %></p>
                          </div>
                      </div>
                  </div>
              <% }); %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#newArrivalsCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#newArrivalsCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
          </button>
      </div>
  </div>
</section>


  <!-- Mountain Bikes Section -->
  <section class="mountain-bikes-section">
    <div class="mountain-bikes-background">
      <div class="gradient-overlay"></div>
      <div class="content">
        <h4 class="discover-heading">Discover the collection</h4>
        <h2 class="mountain-bikes-heading">Mountain Bikes</h2>
        <p class="description">Conquer every trail with our premium Mountain Bikes, designed for ultimate performance
          and unmatched durability. Explore the thrill of off-road adventures with the best gear at unbeatable prices!
        </p>
        <div class="mtb-specifications">
          <ul class="mtb-specifications-list">
            <li class="bullet"><i class="fas fa-bullseye"></i> Lightweight Aluminum Frame</li>
            <li class="bullet"><i class="fas fa-bullseye"></i> Hydraulic Disc Brakes</li>
            <li class="bullet"><i class="fas fa-bullseye"></i> 27.5” Wheels for Better Control</li>
            <li class="bullet"><i class="fas fa-bullseye"></i> Front Suspension for Smooth Ride</li>
            <li class="bullet"><i class="fas fa-bullseye"></i> High-Performance Tires</li>
            <li class="bullet"><i class="fas fa-bullseye"></i> Available in Multiple Sizes</li>
          </ul>
        </div>
        <a href="#" class="explore-more-btn">Explore More</a>
      </div>
    </div>
  </section>

  <!-- Road Bikes Section -->
  <section class="road-bikes-section">
    <div class="road-bikes-background">
      <div class="gradient-overlay"></div>
      <div class="content">
        <h4 class="discover-heading">Discover the collection</h4>
        <h2 class="mountain-bikes-heading">Road Bikes</h2>
        <p class="description">Navigate the city with ease and style on our lightweight road bikes, perfect for daily
